@model IEnumerable<ABCD_Admin.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="title-1 m-b-25">Feedbacks</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.feedbackDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer.userName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Shop.shopName)
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.feedbackDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.userName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shop.shopName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id })
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.id })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>