@model ABCD_Admin.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.userName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userName)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.password)
        </dt>*@

        @*<dd>
            @Html.DisplayFor(model => model.password)
        </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.Employee.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.email)
        </dd>

    </dl>

    <h4>Functions:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var function in ViewBag.Functions)
            {
                <tr>
                    <td>@function.functionId</td>
                    <td>@function.functionName</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Groups:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in ViewBag.Groups)
            {
                <tr>
                    <td>@group.groupId</td>
                    <td>@group.groupName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.userId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
