@model IEnumerable<ABCD_Admin.Models.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h2 class="title-1 m-b-25">Groups</h2>
        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.groupName)
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.groupName)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.groupId })
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.groupId })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.groupId })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>